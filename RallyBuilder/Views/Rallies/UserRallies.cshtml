@model Rally

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Rally</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="RallyName" class="p-0"></label>
            <input asp-for="RallyName" type="text" class="form-control" />
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Home" asp-action="Home" class="btn btn-secondary form-control">Back to homepage</a>
            </div>
        </div>

    </div>
</form>