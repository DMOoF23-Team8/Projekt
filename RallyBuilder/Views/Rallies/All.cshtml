@model List<Rally>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Rallies List
            </h2>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Rally Name</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (Rally rally in Model)
                {
                    <tr>
                        <td>@rally.RallyName</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="1">No rallies found</td>
                </tr>
            }
        </tbody>
    </table>
</div>