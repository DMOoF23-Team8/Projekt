@model RallyBuilder.ViewModels.RallyServiceVM;

<head>
    <meta charset="UTF-8" />
</head>


<div class="container p-3">
    <div class="row">
        @switch (Model.CourseModels.Count())
        {
            case > 0:
                foreach (CourseModel courseModel in Model.CourseModels)
                {
                    <div class="col-4">
                        <div class="card">
                            <a href="@Url.Action("GetCourseById", "Courses", new { id = courseModel.CourseModelId })" class="stretched-link"></a>
                            <div class="card-body">

                                <h5 class="card-title">
                                    Course ID: @courseModel.CourseModelId
                                </h5>
                                <p class="card-text">
                                    Lavet af: @courseModel.Author <br />
                                    @courseModel.Level
                                </p>
                            </div>
                        </div>
                    </div>
                }
                break;
            default:
                <p>
                    Ingen baner fundet
                </p>
                break;

        }
        <div>
        </div>
