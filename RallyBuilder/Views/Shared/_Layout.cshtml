<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RallyBuilder</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-dark border-bottom box-shadow mb-3 navbar-custom">
            <i class="bi bi-flag"></i>
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                </li>

                <li class="nav-item">
                    <a class="nav-link text-light" asp-controller="Home" asp-action="Home">
                        Startside
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-light" asp-controller="Rally" asp-action="Create">
                        Se rallies
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-light" asp-controller="Rally" asp-action="Create">
                        Login
                    </a>
                </li>

            </ul>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
